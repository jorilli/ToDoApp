<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Login"
             Title="Login">
    <VerticalStackLayout
        Spacing="25"
        Padding="30">
        <Label FontSize="20"
            Text="Welcome ShiftHappens!"/>
        <Border BackgroundColor="White" Padding="20"
                Stroke="White" StrokeShape="RoundRectangle 10,10,10,10">
            <VerticalStackLayout Spacing="15">
                <Label Text="Benutzername" TextColor="#1b1b1b"/>
                <Entry TextColor="#1b1b1b"/>
                <Label Text="Passwort" TextColor="#1b1b1b"/>
                <Entry IsPassword="True"
                       TextColor="#1b1b1b"/>
                <Button Text="Login"/>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>